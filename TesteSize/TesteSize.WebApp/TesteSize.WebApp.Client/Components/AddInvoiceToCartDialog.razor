@using BaseDTOs.Invoice
@using TesteSize.BaseDTOs.Company
@using TesteSize.BaseDTOs.Enums

<EditForm Model="newCartInvoice" OnValidSubmit="HandleValidSubmit">
    <MudDialog>
        <DialogContent>
            <DataAnnotationsValidator />

            <MudSelect 
                T="InvoiceDto" 
                @bind-Value="_selectedInvoice"
                Label="Escolha uma nota fiscal" 
                Dense="true" 
                Style="min-width:250px">
                @if (_invoices != null)
                {
                    @foreach (var invoice in _invoices)
                    {
                        <MudSelectItem Value="invoice">@invoice.Numero</MudSelectItem>
                    }
                }
            </MudSelect>

        </DialogContent>
        <DialogActions>
            <MudButton Color="Color.Primary" ButtonType="ButtonType.Submit">@buttonText</MudButton>
            <MudButton Color="Color.Secondary" OnClick="Cancel">Cancelar</MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>

<style>
    .mud-dialog {
        min-width: 450px;
        border-radius: 10px;
    }

    .mud-dialog .mud-dialog-content {
        overflow: hidden !important;
    }

    .mud-card-actions {
        justify-content: space-between;
    }

    .mud-dialog .mud-dialog-actions {
        padding-right: 1em;
    }

    .mud-card-content {
        padding: 25px !important;
    }

    .mud-dialog-title {
        padding-bottom: 0px !important;
    }

</style>